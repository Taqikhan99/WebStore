                <a asp-controller="Laptop" class="btn btn-primary" asp-action="Create">Create New</a>
            }*@
            <div class="d-sm-flex justify-content-between align-items-center mt-4">
                <h4 class="header-title">Create New Laptop</h4>


            </div>
            <div class="trad-history mt-4">
                <form>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <label class="col-sm-2 col-form-label">ModelNo</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="ModelNumber" asp-for="ModelNumber">
