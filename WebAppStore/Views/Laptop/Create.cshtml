    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="col-lg-12 mt-sm-30 mt-xs-30 mt-3">




    <div class="card">
        <div class="card-body">
            @*@if (User.IsInRole("Admin"))
