                        </div>
                        <div class="col-md-6">
                            <label class="col-sm-2 col-form-label">Brand</label>
                            <div class="col-sm-10">
                                <select class="form-control p-0" asp-for="BrandId" asp-items="@(new SelectList(Model.BrandsList, "Id", "BrandName"))"></select>
                                <span asp-validation-for="BrandId"></span>
                            </div>
                        </div>


                    </div>
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <label class="col-sm-2 col-form-label">ModelNo</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="ModelNumber" asp-for="ModelNumber">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-sm-2 col-form-label">Brand</label>
                            <div class="col-sm-10">
                                <select class="form-control p-0" asp-for="BrandId" id="BrandSelect" asp-items="@(new SelectList(Model.BrandsList, "Id", "BrandName"))"></select>
                                <span asp-validation-for="BrandId"></span>
                            </div>
                        </div>


                    </div>

                </form>
            </div>
        </div>
