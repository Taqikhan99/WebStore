@model List<WebAppStore.ViewModels.BrandViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="col-lg-12 mt-sm-30 mt-xs-30 mt-3">
    @if (Model != null && Model.Any())
    {
        <div class="row ">
            @foreach (var m in Model)
            {
                <div class="card mx-2" style="width: 25rem;">

                    <div class="card-body">
                        
                        <div class="d-flex justify-content-between">
                            <h4 class="card-title">@m.BrandName.</h4>
                            <div>
                                <img src="@m.ImageUrl" style="width:100px;height:150px;" alt="No Image Set" />
                            </div>
                        </div>
                        <p>No of Laptops For This Brand: @m.LaptopCount.</p>
                    </div>
                </div>
            }
        </div>
    }

</div>
